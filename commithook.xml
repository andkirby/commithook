<?xml version="1.0"?>
<!-- This is a local configuration file. It is not used in external projects.-->
<config>
    <license>
        <name>commithook</name>
    </license>
    <!--Validators setup-->
    <validators>
        <FileFilter>
            <filter>
                <skip>
                    <files>
                        <file>src/lib/PreCommit/Command/Application.php</file>
                        <file>src/runner.php</file>
                    </files>
                    <paths>
                        <path>bin/</path>
                        <path>src/tests/testsuite/PreCommit/Test/Filter/_fixture</path>
                        <path>src/tests/testsuite/PreCommit/Test/_fixture</path>
                        <!--<path>src/tests/</path>-->
                    </paths>
                </skip>
            </filter>
        </FileFilter>
        <CodingStandard>
            <underscore_in_non_public>0</underscore_in_non_public>
        </CodingStandard>
        <CodeSniffer>
            <rule>
                <directory>src/phpcs</directory>
            </rule>
        </CodeSniffer>
        <License>
            <licenses>
                <commithook>
                    <text><![CDATA[
/**
 * @license https://raw.githubusercontent.com/andkirby/commithook/master/LICENSE.md
 */
                    ]]></text>
                    <test_text>andkirby/commithook/master/LICENSE.md</test_text>
                    <paths>
                        <required>
                            <src>src</src>
                        </required>
                        <ignored>src/tests/testsuite/**/_fixture</ignored>
                    </paths>
                </commithook>
            </licenses>
        </License>
    </validators>

    <hooks>
        <pre-commit>
            <filetype>
                <php>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </php>
                <phtml>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </phtml>
                <xml>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </xml>
                <css>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </css>
            </filetype>
        </pre-commit>
    </hooks>

    <tracker>
        <type>github</type>
        <github>
            <name>andkirby</name>
            <repository>commithook</repository>
        </github>
    </tracker>
</config>
