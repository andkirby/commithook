<config>
    <hooks>
        <pre-commit>
            <ignore>
                <validator>
                    <code>
                        <PhpPhtmlCode>0</PhpPhtmlCode>
                    </code>
                </validator>
            </ignore>
            <filetype>
                <phtml>
                    <validators>
                        <PhpPhtmlCode>1</PhpPhtmlCode>
                    </validators>
                </phtml>
            </filetype>
        </pre-commit>
    </hooks>
</config>
