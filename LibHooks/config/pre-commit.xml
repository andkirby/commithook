<?xml version="1.0"?>
<config>
    <!--Validators setup-->
    <validators>
        <PhpClass>
            <interpret>c:/xampp/php/php.exe</interpret>
        </PhpClass>
        <CodingStandard>
            <underscore_in_non_public>1</underscore_in_non_public>
        </CodingStandard>
        <FileFilter>
            <filter>
                <!-- "skip" validation list -->
                <skip>
                    <!-- Skip validation for files with such extensions -->
                    <extensions>
                        <!--Images-->
                        <jpg>jpg</jpg>
                        <png>png</png>
                        <gif>gif</gif>
                        <bmp>bmp</bmp>
                        <bmp>ico</bmp>
                        <svg>svg</svg>
                        <!--Archives-->
                        <zip>zip</zip>
                        <rar>rar</rar>
                        <gz>gz</gz>
                        <tar>tar</tar>
                        <!--Fonts-->
                        <ttf>ttf</ttf>
                        <fon>fon</fon>
                        <eot>eot</eot>
                        <woff>woff</woff>
                    </extensions>

                    <!-- Skip validation by these paths -->
                    <paths>
                        <!--<path>libs/</path>-->
                    </paths>

                    <!-- Skip validation by these file paths -->
                    <files>
                        <!--<file>index.php</file>-->
                    </files>
                </skip>
                <protect>
                    <files>
                        <file>index.php</file>
                    </files>
                    <!--<paths>-->
                        <!--<path>libs/</path>-->
                    <!--</paths>-->
                </protect>

                <!-- "allow" layer has priority over protect -->
                <allow>
                    <paths>
                        <!--<path>some/path</path>-->
                    </paths>
                </allow>
            </filter>
        </FileFilter>
    </validators>

    <!--Hooks process setup-->
    <hooks>
        <pre-commit>
            <ignore>
                <disable>
                    <!-- Set to 1 in your configuration XML file to skip code validation for the next commit -->
                    <code>0</code>
                    <!-- Set to 1 in your configuration XML file to ignore file/dir protection as well for the next commit -->
                    <protection>0</protection>
                </disable>

                <validator>
                    <!-- Validators list-->
                    <code>
                        <!-- PHP, JS -->
                        <CodeSniffer>1</CodeSniffer>
                        <PhpClass>1</PhpClass>
                        <PhpDoc>1</PhpDoc>
                        <CodingStandard>1</CodingStandard>
                        <RedundantCode>1</RedundantCode>
                        <ParentThis>1</ParentThis>

                        <!-- PHTML -->
                        <CodingStandardPhtml>1</CodingStandardPhtml>

                        <!-- Tabs, BOM, line separators-->
                        <FileStyle>1</FileStyle>
                    </code>
                    <protection>
                        <FileFilter>1</FileFilter>
                    </protection>
                </validator>
            </ignore>
            <filetype>
                <!--Run validators before any filter because filters run always before validators-->
                <before_all_original />
                <!--Run validators, filters before specific validators-->
                <before_all>
                    <filters>
                        <SkipContent>1</SkipContent>
                    </filters>
                    <validators>
                        <UnresolvedConflict>1</UnresolvedConflict>
                    </validators>
                </before_all>
                <php>
                    <validators>
                        <CodeSniffer>1</CodeSniffer>
                        <PhpClass>1</PhpClass>
                        <PhpDoc>1</PhpDoc>
                        <CodingStandard>1</CodingStandard>
                        <RedundantCode>1</RedundantCode>
                        <ParentThis>1</ParentThis>
                    </validators>
                </php>
                <phtml>
                    <validators>
                        <RedundantCode>1</RedundantCode>
                        <CodingStandardPhtml>1</CodingStandardPhtml>
                    </validators>
                </phtml>
                <js>
                    <validators>
                        <RedundantCode>1</RedundantCode>
                    </validators>
                </js>
                <xml>
                    <validators>
                        <XmlParser>1</XmlParser>
                    </validators>
                </xml>
                <after_all>
                    <validators>
                        <TrailingSpace>1</TrailingSpace>
                        <FileStyle>1</FileStyle>
                    </validators>
                </after_all>
            </filetype>
            <end_message>
                <success>Your code is valid.</success>
                <error>Ooops! Something wrong in your files for commit.</error>
            </end_message>
        </pre-commit>
    </hooks>
</config>
