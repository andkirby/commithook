<?xml version="1.0"?>
<config>
    <!--Validators setup-->
    <validators>
        <FileFilter>
            <filter>
                <skip>
                    <!--<files>-->
                        <!--<file>app/code/core/Mage/Core/Helper/Js.php</file>-->
                    <!--</files>-->
                    <paths>
                        <path>lib/</path>
                    </paths>
                </skip>
                <protect>
                    <files>
                        <file>cron.php</file>
                        <file>cron.sh</file>
                    </files>
                    <paths>
                        <path>downloader/</path>
                        <path>lib/</path>
                        <path>app/code/core/</path>
                        <path>app/code/local/Mage/</path>
                        <path>app/design/install/</path>
                    </paths>
                </protect>
            </filter>
        </FileFilter>
        <Magento-ModelEventFields>
            <!-- Possible data model abstract classes -->
            <abstract_class>
                <core_abstract>Mage_Core_Model_Abstract</core_abstract>
                <core_abstract_resource>Mage_Core_Model_Resource_Db_Collection_Abstract</core_abstract_resource>
            </abstract_class>
        </Magento-ModelEventFields>
    </validators>
    <!--Hooks process setup-->
    <hooks>
        <pre-commit>
            <filetype>
                <php>
                    <validators>
                        <CodingStandardMagento>1</CodingStandardMagento>
                        <Magento-ModelEventFields>1</Magento-ModelEventFields>
                    </validators>
                </php>
            </filetype>
        </pre-commit>
    </hooks>
</config>

