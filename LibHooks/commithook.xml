<?xml version="1.0"?>
<config>
    <!--Validators setup-->
    <validators>
        <PhpClass>
            <interpret>c:/xampp/php/php.exe</interpret>
        </PhpClass>
        <CommitMessage>
            <format>/^(Implemented|Fixed|CR Changes?|Refactored) [A-Z]{2,}-[0-9]+: /</format>
        </CommitMessage>
        <FileFilter>
            <filter>
                <skip>
                    <extensions>
                        <!--Images-->
                        <jpg>jpg</jpg>
                        <png>png</png>
                        <gif>gif</gif>
                        <bmp>bmp</bmp>
                        <bmp>ico</bmp>
                        <svg>svg</svg>
                        <!--Archives-->
                        <zip>zip</zip>
                        <rar>rar</rar>
                        <gz>gz</gz>
                        <tar>tar</tar>
                        <!--Fonts-->
                        <ttf>ttf</ttf>
                        <fon>fon</fon>
                        <eot>eot</eot>
                        <woff>woff</woff>
                    </extensions>
                    <!--<paths>-->
                        <!--<path>libs/</path>-->
                    <!--</paths>-->
                    <!--<files>-->
                        <!--<file>index.php</file>-->
                    <!--</files>-->
                </skip>
                <protect>
                    <files>
                        <file>index.php</file>
                    </files>
                    <!--<paths>-->
                        <!--<path>libs/</path>-->
                    <!--</paths>-->
                </protect>
            </filter>
        </FileFilter>
    </validators>

    <filters>
        <ShortCommitMsg>
            <task_tracker_type>jira</task_tracker_type>
            <issue>
                <jira>
                    <issue>
                        <type>
                            <!-- Tasks -->
                            <Task>task</Task>
                            <Sub_Task_Task>task</Sub_Task_Task>
                            <Change_Request>task</Change_Request>
                            <!-- Bugs -->
                            <Bug>bug</Bug>
                        </type>
                    </issue>
                </jira>
            </issue>
        </ShortCommitMsg>
    </filters>

    <!--Hooks process setup-->
    <hooks>
        <pre-commit>
            <filetype>
                <!--Run validators before any filter because filters run always before validators-->
                <before_all_original />
                <!--Run validators, filters before specific validators-->
                <before_all>
                    <filters>
                        <SkipContent />
                    </filters>
                    <validators>
                        <UnresolvedConflict />
                    </validators>
                </before_all>
                <php>
                    <validators>
                        <PhpClass />
                        <PhpDoc />
                        <CodingStandard />
                        <RedundantCode />
                    </validators>
                </php>
                <phtml>
                    <validators>
                        <RedundantCode />
                        <CodingStandardPhtml />
                    </validators>
                </phtml>
                <js>
                    <validators>
                        <RedundantCode />
                    </validators>
                </js>
                <xml>
                    <validators>
                        <XmlParser />
                    </validators>
                </xml>
                <after_all>
                    <validators>
                        <TrailingSpace />
                        <FileStyle />
                    </validators>
                </after_all>
            </filetype>
        </pre-commit>
        <commit-msg>
            <validators>
                <CommitMessage />
            </validators>
        </commit-msg>
    </hooks>
</config>
