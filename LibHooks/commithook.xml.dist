<?xml version="1.0"?>
<config>
    <supported_hooks>
        <hook>pre-commit</hook>
        <hook>commit-msg</hook>
    </supported_hooks>
    <!--Validators setup-->
    <validators>
        <PhpClass>
            <interpret>d:\s\php-5.3.16\php.exe</interpret>
        </PhpClass>
        <CommitMessage>
            <format>/^(Implemented|Fixed|CR Changes?|Refactored) [A-Z]{2,}-[0-9]+: /</format>
        </CommitMessage>
        <FileFilter>
            <filter>
                <skip>
                    <files>
                        <!--<file>app/code/core/Mage/Core/Helper/Js.php</file>-->
                    </files>
                    <paths>
                        <path>lib/</path>
                    </paths>
                </skip>
                <protect>
                    <files>
                        <file>index.php</file>
                        <file>cron.php</file>
                        <file>cron.sh</file>
                    </files>
                    <paths>
                        <path>downloader/</path>
                        <path>lib/</path> <!--if you would add some new lib comment it temporary -->
                        <path>app/code/core/</path>
                        <path>app/code/local/Mage/</path>
                        <path>app/design/install/</path>
                    </paths>
                </protect>
            </filter>
        </FileFilter>
    </validators>

    <!--Hooks process setup-->
    <hooks>
        <pre-commit>
            <filetype>
                <php>
                    <filters>
                        <SkipContent />
                    </filters>
                    <validators>
                        <PhpClass />
                        <PhpDoc />
                        <CodingStandard />
                        <CodingStandardMagento />
                        <TrailingSpace />
                    </validators>
                </php>
                <phtml>
                    <validators>
                        <TrailingSpace />
                    </validators>
                </phtml>
                <xml>
                    <validators>
                        <XmlParser />
                    </validators>
                </xml>
            </filetype>
        </pre-commit>
        <commit-msg>
            <validators>
                <CommitMessage />
            </validators>
        </commit-msg>
    </hooks>
</config>

