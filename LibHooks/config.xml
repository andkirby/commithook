<?xml version="1.0"?>
<config>
    <!--Please update also PreCommit\Composer\Application::VERSION-->
    <version>1.9.0-dev</version>
    <supported_hooks>
        <hook>pre-commit</hook>
        <hook>commit-msg</hook>
    </supported_hooks>

    <!--Additional configuration file-->
    <additional_config>
        <main>commithook.xml</main>
        <magento>commithook-magento.xml</magento>
        <local>../commithook-local.xml</local>
        <userprofile>HOME/.commithook/commithook.xml</userprofile>
        <project>PROJECT_DIR/commithook.xml</project>
        <project_local>PROJECT_DIR/commithook-self.xml</project_local>
    </additional_config>
    <cache_dir>HOME/.commithook/cache</cache_dir>
</config>
