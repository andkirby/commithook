<?xml version="1.0"?>
<!-- This is a local configuration file. It is not used in external projects.-->
<config>
    <license>
        <name>commithook</name>
    </license>
    <!--Validators setup-->
    <validators>
        <License>
            <licenses>
                <commithook>
                    <text><![CDATA[
/**
 * @license https://raw.githubusercontent.com/andkirby/commithook/master/LICENSE.md
 */
                    ]]></text>
                    <test_text>andkirby/commithook/master/LICENSE.md</test_text>
                    <paths>
                        <required>
                            <src>src</src>
                        </required>
                        <ignored>src/tests/testsuite/**/_fixture</ignored>
                    </paths>
                </commithook>
            </licenses>
        </License>
    </validators>

    <hooks>
        <pre-commit>
            <filetype>
                <php>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </php>
                <phtml>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </phtml>
                <xml>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </xml>
                <css>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </css>
                <sh>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </sh>
            </filetype>
        </pre-commit>
    </hooks>
</config>
