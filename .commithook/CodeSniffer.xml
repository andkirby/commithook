<?xml version="1.0"?>
<!-- This is a local configuration file. It is not used in external projects.-->
<config>
    <!--Validators setup-->
    <validators>
        <CodeSniffer>
            <rule>
                <directory>src/phpcs</directory>
            </rule>
        </CodeSniffer>
    </validators>
    <hooks>
        <pre-commit>
            <filetype>
                <php>
                    <validators>
                        <CodeSniffer>1</CodeSniffer>
                    </validators>
                </php>
            </filetype>
        </pre-commit>
    </hooks>
</config>
